{
  "name": "ssin-lib",
  "version": "O.0.1",
  "type": "module",
  "main": "dist/lib/index.cjs",
  "module": "dist/lib/index.js",
  "bin": "dist/sinn-cli.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run lint && npm run build:check && npm run build:js",
    "build:check": "tsc --noEmit",
    "build:js": "tsup-node --entry src/niss-cli.ts --entry src/lib/index.ts --format cjs,esm --dts --sourcemap",
    "clean": "rimraf dist node_modules",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/niss-cli.ts",
    "test": "vitest",
    "lint": "eslint"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  }
}
